h2 Chat Window
div#messages
div(style="position:absolute;bottom:25;)
  input#text-input(type="text")
  input#send-button(type="button", value="Send")
  input#join_game(type="button", value="Join")
  input#start_game(type="button", value="Start")
div#userList
div#playerList(style="background-color:yellow")
script(type="text/javascript" src="/javascript/chat.js")
  $(document).ready(function(){
    now.receiveMessage = function(name, message){
      $("#messages").append("<br>" + name + ": " + message);
    }
    now.userList = function(names) {
      var list = "";
      for (var key in names) {
        list += "<br>" + names[key];
      }
      $("#userList").html(list);
    }
    now.playerList = function(names) {
      var list = "";
      for (var key in names) {
        list += "<br>" + names[key];
      }
      $("#playerList").html(list);
    }
    now.hello = function() {
      alert("your turn!");
      now.command();
    }
    $("#send-button").click(function(){
      now.distributeMessage($("#text-input").val());
      $("#text-input").val("");
      $("#text-input").focus();
    });
    $("#join_game").click(function() {
      now.joinGame();
    });
    $("#start_game").click(function() {
      now.command();
    });
    now.name = prompt("What's your name?", "");
  });

