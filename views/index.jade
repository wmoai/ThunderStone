h1 #{title}
p Welcome to #{title}
p This is an example of an embedded chat window added to ani site. 
  a#chat(href="#") Chat with us
d#floater(style="position:absolute;right:0;top:0;width=25%;height=100%")
script(type="text/javascript")
  $(document).ready(function() {
    $('#chat').click(function(e) {
      e.preventDefault();
      $('<iframe width="300px" height="100%" sandbox="allow-same-origin allow-forms allow-scripts" src="http://localhost:8080/now/chat"></iframe>').appendTo('#floater');
    });
  });
